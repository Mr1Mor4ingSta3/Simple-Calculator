<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp">

    <TextView
        android:id="@+id/txtInput"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:text="Input"
        android:gravity="top|end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="40dp"/>

    <LinearLayout
        android:id="@+id/linearLayout_1"
        app:layout_constraintTop_toBottomOf="@+id/txtInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black">
        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:backgroundTint="#D50000"
            android:textSize="30dp"
            android:layout_weight="1"
            android:padding="10dp"/>

        <Button
            android:id="@+id/btnPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:backgroundTint="#2B0303"
            android:textSize="30dp"
            android:layout_weight="1"
            android:padding="10dp"/>
        <Button
            android:id="@+id/btnEqual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:backgroundTint="#2B0303"
            android:textSize="30dp"
            android:layout_weight="1"
            android:padding="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black">
        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:backgroundTint="@color/black"
            android:textSize="30dp"
            android:layout_weight="1"
            android:padding="10dp"/>
        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:backgroundTint="@color/black"
            android:textSize="30dp"
            android:layout_weight="1"
            android:padding="10dp"/>
        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:backgroundTint="@color/black"
            android:textSize="30dp"
            android:layout_weight="1"
            android:padding="10dp"/>
        <Button
            android:id="@+id/btnDivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:backgroundTint="#2B0303"
            android:textSize="30dp"
            android:layout_weight="1"
            android:padding="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black">
        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:backgroundTint="@color/black"
            android:textSize="30dp"
            android:layout_weight="1"
            android:padding="10dp"/>
        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:backgroundTint="@color/black"
            android:textSize="30dp"
            android:layout_weight="1"
            android:padding="10dp"/>
        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:backgroundTint="@color/black"
            android:textSize="30dp"
            android:layout_weight="1"
            android:padding="10dp"/>
        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:backgroundTint="#2B0303"
            android:textSize="30dp"
            android:layout_weight="1"
            android:padding="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_4"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black">
        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:backgroundTint="@color/black"
            android:textSize="30dp"
            android:layout_weight="1"
            android:padding="10dp"/>
        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:backgroundTint="@color/black"
            android:textSize="30dp"
            android:layout_weight="1"
            android:padding="10dp"/>
        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:backgroundTint="@color/black"
            android:textSize="30dp"
            android:layout_weight="1"
            android:padding="10dp"/>
        <Button
            android:id="@+id/btnMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:backgroundTint="#2B0303"
            android:textSize="30dp"
            android:layout_weight="1"
            android:padding="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_5"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black">
        <Button
            android:id="@+id/btnAllClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AC"
            android:backgroundTint="#D50000"
            android:textSize="30dp"
            android:layout_weight="1"
            android:padding="10dp"/>
        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:backgroundTint="@color/black"
            android:textSize="30dp"
            android:layout_weight="1"
            android:padding="10dp"/>
        <Button
            android:id="@+id/btndot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:backgroundTint="#6C6A6A"
            android:textSize="30dp"
            android:layout_weight="1"
            android:padding="10dp"/>
        <Button
            android:id="@+id/btnAddition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:backgroundTint="#2B0303"
            android:textSize="30dp"
            android:layout_weight="1"
            android:padding="10dp"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>